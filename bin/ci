#!/bin/sh -exu

$(dirname $0)/ci.branches

MODULES=$(ls x-*/*.cabal)

for x in $MODULES; do
    (
        SUBMODULE=$(dirname $x | xargs basename)
        cd $SUBMODULE
        cabal haddock --hoogle

        aws s3 --region=ap-southeast-2 cp --recursive dist/doc/html/$SUBMODULE/ s3://ambiata-doc/$SUBMODULE-haddock/$VERSION
    )
done
